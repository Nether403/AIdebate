{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Debate Config Schema",
  "type": "object",
  "required": [
    "config_version",
    "global_settings",
    "personas",
    "topics"
  ],
  "properties": {
    "config_version": { "type": "string" },
    "schema": { "type": "string" },

    "global_settings": {
      "type": "object",
      "required": [
        "voice_provider",
        "model_provider",
        "model_selection",
        "model_temperature",
        "global_rules"
      ],
      "properties": {
        "voice_provider": { "type": "string" },

        "model_provider": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },

        "model_selection": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 1
        },

        "model_temperature": {
          "type": "array",
          "items": { "type": "number" },
          "minItems": 1
        },

        "global_rules": {
          "type": "object",
          "required": [
            "debate_rules",
            "acknowledgment",
            "structure",
            "time_limit",
            "word_limit"
          ],
          "properties": {
            "debate_rules": { "type": "string" },
            "acknowledgment": { "type": "string" },
            "structure": {
              "type": "object",
              "required": ["opening", "rebuttal", "closing"],
              "properties": {
                "opening": { "type": "string" },
                "rebuttal": { "type": "string" },
                "closing": { "type": "string" }
              },
              "additionalProperties": false
            },
            "time_limit": { "type": "string" },
            "self_scoring_enabled": { "type": "boolean" },
            "cheating_detection_enabled": { "type": "boolean" },
            "word_limit": { "type": "integer" },
            "flair": { "type": "string" }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "rounds": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "seconds", "word_limit"],
        "properties": {
          "name": { "type": "string" },
          "seconds": { "type": "integer", "minimum": 10 },
          "word_limit": { "type": "integer", "minimum": 1 }
        },
        "additionalProperties": false
      }
    },

    "moderator": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "selection": { "type": "string", "enum": ["random_persona", "fixed"] }
      },
      "additionalProperties": false
    },

    "quick_settings": {
      "type": "object",
      "properties": {
        "moderator_enabled": { "type": "boolean" },
        "sudden_death": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "threshold": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },

    "personas": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "name",
          "pov",
          "voice",
          "template",
          "wildcards",
          "avatar_prompt"
        ],
        "properties": {
          "name": { "type": "string" },
          "pov": { "type": "string" },
          "voice": {
            "type": "object",
            "required": ["voice_name"],
            "properties": {
              "voice_name": { "type": "string" }
            },
            "additionalProperties": false
          },
          "template": { "type": "string" },
          "wildcards": {
            "type": "object",
            "patternProperties": {
              "^[A-Z0-9_]+$": {
                "type": "object",
                "required": ["values"],
                "properties": {
                  "values": {
                    "type": "array",
                    "items": { "type": "string" },
                    "minItems": 1
                  },
                  "weights": {
                    "type": "array",
                    "items": { "type": "number" }
                  }
                },
                "additionalProperties": false
              }
            },
            "additionalProperties": false
          },
          "avatar_prompt": { "type": "string" }
        },
        "additionalProperties": false
      }
    },

    "topics": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      }
    }
  },
  "additionalProperties": false
}
